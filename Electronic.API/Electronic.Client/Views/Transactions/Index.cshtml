<div class="container">
    <hr />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="ResetModal();">Create New</button><br /><br />
    <table id="table" class="table table-hover">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Code
                </th>
                <th>
                    Date
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width: 1300px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Item Form</h4>
            </div>
            <div class="modal-body">
                <form>
                    <h4>Transaction</h4>
                    <div class="form-group row">
                        <div class="hidden">
                            <label for="Id">Id</label>
                            <input type="text" id="Id" placeholder="Id" disabled="disabled" />
                        </div>
                        <div class="col-md-6"> 
                                <label for="TransactionCode">Transaction Code</label>
                                <input type="text" class="form-control" id="TransactionCode" placeholder="TransactionCode" />
                        </div>
                    </div>

                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="Save();">Add</button>
                <button type="button" class="btn btn-primary" id="Update" style="display:none;" onclick="Edit();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Content/datatables/jquery.dataTables.min.js"></script>
    <link href="~/Content/datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Content/sweetalert/sweetalert.min.js"></script>
    <link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/SupplierMaster/RetrieTransaction.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
