<div class="container">
    <br />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newOrderModal" onclick="addNewOrder()">Create New</button><br /><br />
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Transaction Id</th>
                <th>Transaction Code</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="newOrderModal">
    <div class="modal-dialog modal-lg" style="width: 900px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Transaction Form</h4>
            </div>
            <form id="NewOrderForm">
                <div class="modal-body">
                    <div class="master">
                        <h5 style="color:#ff6347">Transaction</h5>
                        <hr />
                        <div class="form-horizontal">
                            @*<input type="hidden" id="Id" />*@
                            <div class="form-group">
                                <label class="control-label col-md-1">Code</label>
                                <div class="col-md-3">
                                    <input type="text" id="TransactionCode" name="TransactionCode" placeholder="Transaction Code" class="form-control" />
                                </div>
                                <label class="control-label col-md-1">Date</label>
                                <div class="col-md-3">
                                    <input type="text" id="Date" name="address" placeholder="Customer Address" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <br />

                    <div class="detail">
                        <h5 style="margin-top:10px;color:#ff6347">Transaction Details</h5>
                        <hr />
                        <div class="mycontainer" id="mainRow">
                            <div class="form-horizontal">
                                @*<input type="hidden" id="Id" />*@
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <label for="ProductItem" class="col-md-1 text-right">Item</label>
                                        <select id="ProductItem" class="pc form-control" onchange="loadItem(this)">
                                            <option>Select</option>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <label for="Price" class="col-md-1 text-right">Price</label>
                                        <input type="text" class="form-control" id="Price" placeholder="0" disabled="disabled" value="0" />
                                    </div>
                                    <div class="col-md-1">
                                        <label for="Quantity" class="col-md-1 text-right">Qt</label>
                                        <input type="text" class="form-control text-center" id="Quantity" placeholder="0" value="0" />
                                    </div>
                                    <div class="col-md-2">
                                        <label for="Subtotal" class="col-md-1 text-right">Subtotal</label>
                                        <input type="text" class="form-control" id="Subtotal" placeholder="0" disabled="disabled" value="0" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="control-label text-left">&nbsp;</label><br />
                                        @*<a href="#" class="btn btn-block btn-success" id="AddList" style="width:80px">Add list</a>*@
                                        <input type="button" id="AddList" value="AddList" style="width:80px" class="btn btn-success" />
                                    </div>
                                </div>
                                <br />
                            </div>

                        </div>
                        <div id="orderItem">
                            <table class="table" id="detailsTable"></table>
                            <span id="orderItemError" style="color:red"></span>
                        </div>

